---
export const amadorData = {
	name: "Amador",
    mail: "amasabcar@outlook.com",
    github: "https://github.com/amadr-95",
	linkedin: "https://www.linkedin.com/in/amadorsabido",
	rol: "Full Stack Java Developer",
	description:
		"I am a passionate technology enthusiast, continuously acquiring new skills and exploring the limitless opportunities offered by the digital world. Experienced in multiple programming languages and frameworks, with a strong focus on delivering high-quality, efficient code.",
};

import Badge from "@/components/Badge.astro";
import SocialPill from "@/components/SocialPill.astro";
import Linkedin from "@/components/icons/Linkedin.astro";
import GitHub from "@/components/icons/GitHub.astro";
import Mail from "@/components/icons/Mail.astro";
---

<section class="my-10 md:my-20 lg:w-[740px] mx-auto">
	<div class="flex gap-x-4">
		<img
			class="size-16 rounded-full"
			src="/images/me.webp"
			alt={amadorData.name}
		/>
		<a
			href={amadorData.linkedin}
			target="_blank"
			rel="noopener"
			class="flex items-center transition hover:scale-105"
		>
			<Badge>Open to Work</Badge>
		</a>
	</div>

	<h1
		class="text-5xl font-bold my-5 flex flex-col sm:flex-row gap-4"
	>
		Hey, I'm <span class="text-gradient">{amadorData.name}</span>
	</h1>

    <h2 class="flex flex-col gap-y-2 text-xl text-pretty mt-2">
        <span class="text-3xl text-gradient">{amadorData.rol}</span>
		{amadorData.description}
	</h2>

	<nav class="flex flex-wrap gap-4 mt-7">
        <SocialPill href={amadorData.linkedin}>
            <Linkedin />
            LinkedIn
        </SocialPill>
        <SocialPill href={amadorData.github}>
            <GitHub />
            GitHub
        </SocialPill>
        <SocialPill href={'mailto:' + amadorData.mail}>
            <Mail />
            Contact me
        </SocialPill>
    </nav>
</section>

<style>
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 350%;
		background-position: 0%;
	}
</style>
